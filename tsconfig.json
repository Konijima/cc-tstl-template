{
    "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/vscode-typescript-to-lua/master/tsconfig-schema.json",
    "compilerOptions": {
        "outDir": "out/",
        "target": "ESNext",
        "lib": ["ESNext"],
        "moduleResolution": "node",
        "strict": false,
        "typeRoots": ["./types"],
        "types": ["@jackmacwindows/lua-types/cc", "craftos", "cc"]
    },
    "tstl": {
        "noHeader": true,
        "luaTarget": "CC",
        "luaLibImport": "inline"
    },
    "include": [
        "./src/*.ts"
    ]
}